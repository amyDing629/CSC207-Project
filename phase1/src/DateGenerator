import java.time.LocalDateTime;


/**
 * This is a use case for validating AND generating the meeting date/time
 */
public class DateGenerator {

    /**
     * Check if the suggested meeting datetime is after the current datetime
     * @return boolean
     */
    protected boolean checkDateTime(Meeting meeting) {
        LocalDateTime today = LocalDateTime.now();
        LocalDateTime dateTime = meeting.getDateTime();
        return dateTime.isAfter(today);
    }

    /**
     * Generate the datetime for the second meeting
     * @return the datetime of the second meeting
     * */
    public LocalDateTime generateDateTime(Meeting meeting, int duration){
        LocalDateTime dateTime = meeting.getDateTime();
        LocalDateTime second = dateTime.plusDays(duration);
        return second;
    }
}